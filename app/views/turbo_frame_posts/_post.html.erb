<%= turbo_frame_tag post do %>
  <div>
    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>
  </div>

  <p>
    <%= link_to "Edit", edit_turbo_frame_post_path(post) %>
    <%= link_to "Delete", turbo_frame_post_path(post), method: :delete %>
  </p>
<% end %>
